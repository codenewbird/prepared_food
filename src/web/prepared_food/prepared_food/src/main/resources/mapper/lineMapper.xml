<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zjx.dao.LineDao">
    <insert id="addItem" parameterType="com.zjx.entity.ProductionLine">
        INSERT INTO productionLine VALUES(
        #{lineId},
        #{state},
        #{name})
    </insert>
    <select id="queryItem" parameterType="String">
        SELECT * FROM productionLine WHERE lineId=#{id}
    </select>
    <select id="getAllItems">
        SELECT * FROM productionLine
    </select>
</mapper>