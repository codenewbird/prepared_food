<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zjx.dao.LotDao">
    <insert id="addItem" parameterType="com.zjx.entity.ProductionLot">
        INSERT INTO productionLot VALUES(
        #{identificationCode},
        #{lot},
        #{lineId},
        #{state},
        #{num})
    </insert>
    <select id="queryItem" parameterType="String">
        SELECT * FROM productionLot WHERE lot=#{lot}
    </select>
    <select id="getAllItems">
        SELECT * FROM productionLot
    </select>
</mapper>